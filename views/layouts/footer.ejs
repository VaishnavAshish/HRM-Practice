<!-- views/layouts/footer.ejs -->
<footer class="">
    <div class="vpd-30 hide">
        <p class="text-center text-muted">Â© Copyright 2018 <a href="https://krowsoftware.com/psa/" target="_blank">Krow</a></p>
    </div>

    <!-- global loader start-->
    <div class="hide" id="globalLoader">
	    <div class="slds-spinner_container slds-is-fixed">
	        <div role="status" class="slds-spinner slds-spinner_medium slds-spinner_brand">
	            <span class="slds-assistive-text">Loading</span>
	            <div class="slds-spinner__dot-a"></div>
	            <div class="slds-spinner__dot-b"></div>
	        </div>
	    </div>
    </div>
    <!-- global loader end-->

    <!-- global alert start-->
    <div id="globalAlert">
    	<section tabindex="-1" class="slds-modal  slds-modal_prompt">
    		<div class="slds-modal__container">
    			<header class="slds-modal__header slds-theme_error slds-theme_alert-texture">
    				<h2 class="slds-text-heading_medium" id="prompt-heading-id">Are you sure?</h2>
    			</header>
    			<div class="slds-modal__content slds-p-around_medium" id="prompt-message-wrapper">
    				<p alert-message>Are you sure you want to delete this item?</p>
    			</div>
    			<footer class="slds-modal__footer slds-theme_default">
                        <button class="slds-button slds-button_neutral" onclick="closeModal('#globalAlert')">Cancel</button>
                        <button class="slds-button slds-button_neutral" onclick="confirmDeleteItem(this);" btn-confirm>Confirm</button>
    			</footer>
    		</div>
    	</section>
    	<div class="slds-backdrop"></div>
    </div>
    <!-- global alert end-->

    <!-- global toast start -->
    <div  id="globalToast" class="toast toast-top max-w-600 tmr-60 hide">
        <div class="slds-notify slds-notify_toast" toast-type="toast-type">
            <div class="slds-grid">
                <div class="slds-no-flex">
                    <i class="fa fa-info-circle text-size-18" toast-icon="toast-icon"></i>
                </div>
                <div class="slds-p-horizontal_medium slds-has-flexi-truncate">
                    <div class="text-size-16" toast-msg="toast-msg">
                        Account ACME - 100 widgets was created.
                    </div>
                </div>
                <div class="slds-no-flex slds-col--bump-left" >
                    <button class="slds-button slds-button_icon  slds-notify__close slds-button_icon-inverse" title="Close"  toast-close="toast-close">
                        <span class="slds-button__icon">
                            <i class="fa fa-times text-size-21"></i>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <!-- global toast end -->

    <!-- global error toast start -->
    <% if(messageType=='error') { %>
        <div  id="globalErrorToast" class="toast toast-top max-w-600 tmr-60 ">
            <div class="slds-notify slds-notify_toast slds-theme_error" toast-type="toast-type">
                <div class="slds-grid">
                    <div class="slds-no-flex">
                        <i class="fa fa-info-circle text-size-18" toast-icon="toast-icon"></i>
                    </div>
                    <div class="slds-p-horizontal_medium slds-has-flexi-truncate">
                        <div class="text-size-16" toast-msg="toast-msg">
                            <%= message %>
                        </div>
                    </div>
                    <div class="slds-no-flex slds-col--bump-left" >
                        <button class="slds-button slds-button_icon  slds-notify__close slds-button_icon-inverse" title="Close"  toast-close="toast-close" onclick="closeGlobalToast('#globalErrorToast');">
                            <span class="slds-button__icon">
                                <i class="fa fa-times text-size-21"></i>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    <!-- global error toast end -->
    
    <!-- side menu backdrop start-->
    <div class="slds-backdrop side-menu-backdrop" id="sideMenuBackdrop"></div>	
    <!-- side menu backdrop end-->

	<% include ../modals/modal-org-settings-panel %>
         
</footer>
