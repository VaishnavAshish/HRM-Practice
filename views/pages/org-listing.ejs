                                                                      <li class="slds-dropdown__item" role="presentation">
                                                                        <a href="javascript:void(0);" role="menuitem" tabindex="-1" onclick="activateBeforeConfirm('#globalAlert', 'activate(\'<%= comp.id %>\',\'company\')')">
