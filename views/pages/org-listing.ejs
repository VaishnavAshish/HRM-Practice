                                        <div class="sm-slds-grow">
                                            <div class="slds-form-element">
                                                <div class="slds-form-element__control slds-input-has-icon slds-input-has-icon_right">
                                                    <input type="text" class="slds-input" placeholder="Search company by name" id="searchCompName" searchFunc="findCompanyByName()" onkeypress="handle(event,this);" autocomplete="off">
                                                    <div class="slds-input__icon-group slds-input__icon-group_right">
                                                        <button class="slds-input__icon slds-input__icon_right slds-button slds-button_icon" title="Clear" onclick="clearSearchBox(this);findCompanyByName();">
                                                        <i class="fa fa-times-circle"></i>
                                                        </button>
