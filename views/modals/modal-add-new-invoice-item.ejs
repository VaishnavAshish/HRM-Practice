<!-- modal add new invoice item start-->
<div id="modalAddNewInvItem">
    <section role="dialog" tabindex="-1" class="slds-modal">
        <div class="slds-modal__container">
            <header class="slds-modal__header">
                <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="closeModal('#modalAddNewInvItem');">
                    <span class="slds-button__icon">
                        <i class="fa fa-times text-size-21"></i>
                    </span>
                </button>
                <h2  class="slds-text-heading_medium slds-hyphenate">Add New Row Item</h2>
            </header>
            <div class="slds-modal__content slds-p-around_medium">
                <div>
                    <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            Type
                            <abbr class="slds-required" title="required">*</abbr>
                        </label>
                        <div class="slds-form-element__control">
                            <div class="slds-select_container">
                                <select class="slds-select" id="invoice-type">
                                    <option value="Timesheet">Timesheet</option>
                                    <option value="Expense">Expense</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small">

                            </div>
                        </div>
                    </div>
                    <div class="slds-form-element slds-m-bottom_medium" reset='errorclass'>
                        <label class="slds-form-element__label">
                            Project
                            <abbr class="slds-required" title="required">*</abbr>
                        </label>
                        <div class="slds-form-element__control">
                            <div class="slds-select_container">
                                <select class="slds-select" id="invoice-manual-entry-project" reset='value'>
                                    <% if(projects.length >0) { %>
                                        <option value=""> </option>
                                        <% projects.forEach(function(project) { %>
                                            <option pr_type="<%= project.type %>" pr_id="<%= project.id %>" value="<%= project.id %>"><%= project.name %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <option value=""> </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small" reset='errmsg'>

                            </div>
                        </div>
                    </div>

                    <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            Description
                        </label>
                        <div class="slds-form-element__control">
                            <textarea class="slds-textarea" id="invoice-description"></textarea>
                        </div>
                    </div>
                    <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            QTY
                            <abbr class="slds-required" title="required">*</abbr>
                        </label>
                        <div class="slds-form-element__control">
                            <input type="number" id="invoice-quantity" class="slds-input" placeholder="">
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small">

                            </div>
                        </div>
                    </div>
                    <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            Unit Price
                            <abbr class="slds-required" title="required">*</abbr>
                        </label>
                        <div class="slds-form-element__control">
                            <input type="number" id="invoice-unit-price" class="slds-input" placeholder="">
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small">

                            </div>
                        </div>
                    </div>
                    <!-- <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            % Discount
                        </label>
                        <div class="slds-form-element__control">
                            <input type="text" class="slds-input" placeholder="">
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small">

                            </div>
                        </div>
                    </div> -->
                    <!-- <div class="slds-form-element slds-m-bottom_small">
                        <label class="slds-form-element__label">
                            TAX
                        </label>
                        <div class="slds-form-element__control">
                            <div class="slds-select_container">
                                <select class="slds-select">
                                    <option value="">GST</option>
                                    <option value="">VAT</option>
                                    <option value="">Other</option>
                                </select>
                            </div>
                            <div class="slds-text-color_error text-size-12 slds-p-top_xx-small">

                            </div>
                        </div>
                    </div> -->

                </div>

            </div>
            <footer class="slds-modal__footer">
                <button class="slds-button slds-button_neutral" onclick="closeModal('#modalAddNewInvItem');">Cancel</button>
                <button class="slds-button slds-button_brand" onclick="addInvoiceLineItem('#modalAddNewInvItem')">Add</button>
            </footer>
        </div>

    </section>
    <div class="slds-backdrop"></div>
</div>
<!-- modal add new invoice item end-->
