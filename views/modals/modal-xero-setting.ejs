<div id="modalXeroSetting">
    <section role="dialog" tabindex="-1" class="slds-modal">
      <!-- modal quickbook setting start-->
              <div class="slds-modal__container">
                  <header class="slds-modal__header">
                      <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="closeModal('#modalXeroSetting');">
                          <span class="slds-button__icon">
                              <i class="fa fa-times text-size-21"></i>
                          </span>
                      </button>
                      <h2  class="slds-text-heading_medium slds-hyphenate">Integration With Xero</h2>
                  </header>

                      <!-- <div> -->
                      <% if(!user.company_info.xero_enabled){ %>
                          <form id="connect-to-xero" method="get" action="/initiateXero">

                            <footer class="slds-modal__footer">
                                <button class="slds-button slds-button_neutral" onclick="closeModal('#modalXeroSetting');">Cancel</button>
                                <button class="slds-button" type="submit">
                                  <img src="/img/connect_xero.svg" alt=""  width="160">
                                </button>
                            </footer>
                        </form>
                    <% } else { %>

                        <footer class="slds-modal__footer">
                          <button class="slds-button slds-button_neutral" onclick="closeModal('#modalXeroSetting');">Cancel</button>
                          <button class="slds-button" onclick="disconnectIntegration('#modalXeroSetting','Xero');">
                            <img src="/img/disconnect_xero.svg" alt=""  width="160">
                          </button>
                        </footer/>
                    <% } %>
              </div>
          </section>
          <div class="slds-backdrop"></div>
      </div>
      <!-- modal quickbook setting end-->
