                        </td>
                        <td align="right">
                            USD 500.00
                        </td>
                    </tr> -->
                  
                </tbody>
            </table>
        </div>

        <div class="line-top">
            <table class="tbl-fixed tbl-padded">
                <tbody>
                    <tr>
                        <td align="right">
                            Subtotal
                        </td>
                        <td align="right" width="20%">
                            <%= sumOfTotalAmount %>   
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            + TAX    
                        </td>
                        <td align="right" width="20%">
                            5.00   
                        </td>
                    </tr>
                    <tr>
                        <td align="right">
                            - Discount    
                        </td>
                        <td align="right" width="20%">
                            10.00   
                        </td>
                    </tr>
                    <tr class="bg-dull">
                        <td align="right">
                            <span class="text-size-18">
                                Total Amount        
                            </span>
                        </td>
                        <td align="right" width="20%">
                            <strong class="text-size-18">
                                USD <% sumOfTotalAmount = sumOfTotalAmount + 5 + 10 %>
                                                            <%= sumOfTotalAmount %>
                            </strong>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <div style="padding: 60px 40px;">
                <strong class="">
                    Note
